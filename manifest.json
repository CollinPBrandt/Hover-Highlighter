{
  "name": "Hover Highlight",
  "version": "0.0.1",
  "description": "Highlight text you hover over",
  "permissions": ["storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/Icon16.png",
      "32": "images/Icon32.png",
      "48": "images/Icon48.png",
      "128": "images/Icon128.png"
    }
  },
  "icons": {
    "16": "images/Icon16.png",
    "32": "images/Icon32.png",
    "48": "images/Icon48.png",
    "128": "images/Icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["contentScript.css"],
      "js": ["jquery-3.3.1.min.js","jquery.blast.min.js", "contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["jquery-3.3.1.min.js","jquery.blast.min.js", "background.js"],
    "persistent": false
  },
  "manifest_version": 2
}