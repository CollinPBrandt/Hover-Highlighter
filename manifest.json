{
  "name": "Text Highlighter",
  "version": "1.0",
  "description": "Highlight text you hover over",
  "permissions": ["storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/highlighterIcon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["contentScript.css"],
      "js": ["jquery-3.3.1.min.js","jquery.blast.min.js", "contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["jquery-3.3.1.min.js","jquery.blast.min.js", "background.js"],
    "persistent": false
  },
  "manifest_version": 2
}